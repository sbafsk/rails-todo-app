
<h1>To Do: </h1>
<h3> Current tasks: </h3>
<ul>
<% @tasks.each do |t| %>
  <li>
    <strong><%= link_to t.title, task_path(t) %></strong>
    <%= link_to check_box_tag(:task, :completed, t.completed), 
          "/tasks/#{t.id}/complete/#{!t.completed}" %>
  </li>
<% end %>
</ul>

<%= link_to 'New task', new_task_path %>